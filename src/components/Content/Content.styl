@import '~/styles/vars'

.content
    width: 100%
    padding: 5rem
    text-align: center
    font-family: 'Raleway', sans-serif
    

    h1
        font-weight: 600
        font-size: 2em

    blockquote
        border-left: 3px solid $primaryColor
        margin: 4rem

        p
            padding: 3rem
            font-size: 1.3em
            line-height: 1.4em

        cite
            font-style: italic
            font-weight: 300